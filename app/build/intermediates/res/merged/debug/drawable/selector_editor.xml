<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
	<item
		android:state_focused="true"
		android:state_enabled="true">

		<shape android:shape="rectangle">
			<!-- 填充的颜色 -->
			<solid android:color="#FFFFFF" />
			<stroke
				android:width="1dp"
				android:color="#bfbfbf" />
			<!-- 设置按钮的四个角为弧形 -->
			<corners android:radius="3dip" />

			<padding
				android:left="10dp"
				android:top="10dp"
				android:right="10dp"
				android:bottom="10dp" />
		</shape>
	</item>

	<item android:state_focused="false">
		<shape android:shape="rectangle">
			<!-- 填充的颜色 -->
			<solid android:color="#FFFFFF" />
			<stroke
				android:width="1dp"
				android:color="#b7babf" />
			<!-- 设置按钮的四个角为弧形 -->
			<corners android:radius="3dip" />

			<padding
				android:left="10dp"
				android:top="10dp"
				android:right="10dp"
				android:bottom="10dp" />
		</shape>


	</item>


</selector>